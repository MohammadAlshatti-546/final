<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".whatis_details">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/legend_para_img"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="55dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/title_legend"
                android:layout_marginBottom="150dp"
                android:layout_marginTop="-10dp"
                app:srcCompat="@drawable/line" />

            <TextView
                android:id="@+id/title_legend"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/legend_para_img"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="320dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/mobily"
                android:gravity="right"
                android:text="ما هو مرض الاكتئاب ؟"
                android:textColor="#853838"
                android:textSize="34sp" />

            <ImageView
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/title_legend"
                android:layout_marginTop="65dp"
                app:srcCompat="@drawable/line" />

            <TextView
                android:id="@+id/paraghraph_legend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/line2"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="67dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/massir_ballpoint"
                android:text="يب"
                android:textColor="#636568"
                android:textSize="25sp" />

        </RelativeLayout>
    </ScrollView>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_treatDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />


</RelativeLayout>